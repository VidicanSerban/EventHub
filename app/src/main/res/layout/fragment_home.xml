<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eventhub.feature_onboarding.onboarding_fragments.RegisterFrag">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHomeBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/homebartop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data sistemului"
            android:textColor="@color/homebarcolor"
            android:textAllCaps="true"
            android:layout_marginTop="44sp"
            android:layout_marginStart="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/ivCloud"
            android:layout_width="14sp"
            android:layout_height="10sp"
            android:layout_marginLeft="9dp"
            android:src="@drawable/cloud"
            app:layout_constraintBottom_toBottomOf="@+id/tvTemperature"
            app:layout_constraintLeft_toRightOf="@id/tvDate"
            app:layout_constraintTop_toTopOf="@id/tvTemperature" />

        <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2sp"
            android:layout_marginTop="44sp"
            android:text="@string/temperature"
            android:textColor="@color/homebarcolor"
            app:layout_constraintLeft_toRightOf="@id/ivCloud"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oradea_romania"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintStart_toStartOf="@id/tvDate"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSearch"
            android:layout_width="308sp"
            android:layout_height="40sp"
            android:layout_marginTop="18dp"
            android:background="@drawable/hometopbarinputtext"
            app:layout_constraintLeft_toLeftOf="@id/tvLocation"
            app:layout_constraintTop_toBottomOf="@id/tvLocation">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:hint="@string/cauta_evenimente"
                android:textColorHint="@color/searchhint"
                android:textColor="@color/searchhint"
                android:background="@drawable/hometopbarinputtext"/>


        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/search"
            app:layout_constraintBottom_toBottomOf="@id/tilSearch"
            app:layout_constraintLeft_toLeftOf="@id/tilSearch"
            app:layout_constraintTop_toTopOf="@id/tilSearch" />

        <ImageView
            android:id="@+id/ivFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29sp"
            android:background="@drawable/filters"
            app:layout_constraintLeft_toRightOf="@id/tilSearch"
            app:layout_constraintBottom_toBottomOf="@id/tilSearch"
            app:layout_constraintTop_toTopOf="@id/tilSearch"/>

        <Button
            android:id="@+id/btnToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/home_button_1"
            android:text="@string/astazi"
            android:textSize="11sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/clHomeBar"
            app:layout_constraintStart_toStartOf="@id/tilSearch"
            app:layout_constraintTop_toBottomOf="@id/tilSearch" />

        <Button
            android:id="@+id/btnTomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/home_button_2"
            android:text="Maine"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/btnToday"
            app:layout_constraintStart_toEndOf="@id/btnToday"
            app:layout_constraintTop_toTopOf="@id/btnToday" />

        <Button
            android:id="@+id/btnThisWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/home_button_2"
            android:text="Maine"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/btnToday"
            app:layout_constraintStart_toEndOf="@id/btnToday"
            app:layout_constraintTop_toTopOf="@id/btnToday" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/clHomeBar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="155dp" />

        <EditText
            android:id="@+id/etTop10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_10_evenimente_in_aceasta_saptamana"
            app:layout_constraintTop_toTopOf="@id/rvHome"
            app:layout_constraintStart_toStartOf="@id/rvHome"/>

        <ScrollView
            android:id="@+id/svTopTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/etTop10"
            app:layout_constraintStart_toStartOf="@id/rvHome"/>

    <EditText
        android:id="@+id/etPopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/evenimente_populare"
        android:layout_marginTop="40sp"
        app:layout_constraintTop_toBottomOf="@id/svTopTen"
        app:layout_constraintStart_toStartOf="@id/rvHome"/>

        <ScrollView
            android:id="@+id/svPopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/etPopular"
            app:layout_constraintStart_toStartOf="@id/svTopTen"/>

        <ScrollView
            android:id="@+id/svNearYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/svPopular"
            app:layout_constraintStart_toStartOf="@id/svPopular"/>

</androidx.constraintlayout.widget.ConstraintLayout>